# =============================================================================
# Adaptive RAG MCP Server Configuration
# =============================================================================
# Copy this file to .env and customize values

# Environment mode: development, staging, production
ENVIRONMENT=development

# API Authentication (MUST change in production!)
ADAPTIVE_RAG_API_KEY=your-secure-api-key-here

# Server Binding
# Use 127.0.0.1 for local development (security best practice)
# Use 0.0.0.0 for Docker or remote access
HOST=127.0.0.1
PORT=8000
LOG_LEVEL=INFO

# CORS Settings
# Comma-separated list of allowed origins
# CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
# Set to true only in development!
CORS_ALLOW_ALL=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# RAG Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DB_PATH=./data/chroma

# LLM Provider (gemini)
LLM_PROVIDER=gemini
GOOGLE_API_KEY=your-google-api-key-here
